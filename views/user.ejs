<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <h2 class="text-center">Halaman User</h2>
        <h3>Daftar Tugas:</h3>
        <ul class="list-group">
            <% uploadedFiles.forEach(file => { %>
                <li class="list-group-item">
                    <a href="/uploads/<%= file.filename %>"><%= file.originalname %></a> - Diunggah oleh: <%= file.fullname %>
                    <form action="/submit-questions" method="POST" class="question-form">
                        <input type="hidden" name="filename" value="<%= file.filename %>">
                        <div class="questions mt-2">
                            <input type="text" name="name" class="form-control" placeholder="Nama Penanya" required><br>
                            <input type="text" name="question1" class="form-control" placeholder="Pertanyaan 1" required><br>
                            <input type="text" name="question2" class="form-control" placeholder="Pertanyaan 2" required><br>
                            <input type="text" name="question3" class="form-control" placeholder="Pertanyaan 3" required><br>
                        </div>
                        <button type="submit" class="btn btn-primary mt-2">Kirim Pertanyaan</button>
                    </form>
                </li>
            <% }) %>
        </ul>
        <p>
            <a href="/questions" class="btn btn-info mt-3">Lihat Semua Pertanyaan</a>
        </p>
        <a href="/logout" class="btn btn-danger mt-3">Logout</a>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script>
        $(document).ready(function(){
            $('.question-form').on('submit', function(event) {
                event.preventDefault(); // Mencegah pengiriman form default
                const form = $(this);
                $.ajax({
                    url: form.attr('action'),
                    type: form.attr('method'),
                    data: form.serialize(),
                    success: function(response) {
                        alert(response.message); // Tampilkan pesan sukses
                        form[0].reset(); // Reset form setelah pengiriman
                    },
                    error: function() {
                        alert('Terjadi kesalahan saat mengirim pertanyaan.'); // Pesan kesalahan jika gagal
                    }
                });
            });
        });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
