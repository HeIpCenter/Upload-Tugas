<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pertanyaan</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <h2 class="text-center">Daftar Pertanyaan</h2>
        
        <ul class="list-group">
            <% uploadedFiles.forEach(file => { %>
                <li class="list-group-item">
                    <strong>Berkas:</strong> <%= file.originalname %> - Diunggah oleh: <%= file.fullname %>
                    <ul>
                        <% questions.forEach(q => { %>
                            <% if (q.filename === file.originalname) { %>
                                <li>
                                    <strong>Nama:</strong> <%= q.name %><br>
                                    <strong>Pertanyaan:</strong> <%= q.question %>
                                </li>
                            <% } %>
                        <% }) %>
                    </ul>
                </li>
            <% }) %>
        </ul>
        <a href="/user" class="btn btn-info mt-3">Kembali ke Halaman User</a>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
